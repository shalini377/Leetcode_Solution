class Solution 
{
public:
    int reverse(int x) 
    {
         long r=0;
         int num;

        while(x!=0)
        {
            num=x%10;
            r=r*10+num;
            x/=10;
            cout<<r<<endl;
        }
        if((r<INT_MIN) ||(r>INT_MAX))
        {

       return 0;  
        }
        else{
            return r;
        }
    }
    
};
